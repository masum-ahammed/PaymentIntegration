@model User.Web.Models.PlayerViewModel

@{
    ViewBag.Title = "Player";
}


<div class="row">

    <!-- Blog Entries Column -->
    <div class="col-md-8" style="width:65%; height:400px;">

        

        @if (!Model.IsEnrolledInGame)
        {
            <a style="height:50px; position:relative; margin: -4px -154px; width:311px; top:50%; left:50%;" class="btn btn-success btn-lg" href="/Home/EnrollIntoGame/@Model.UserId"> Enroll into Game</a>
        }
        else
        {
            <h2 style="position:relative; margin: -4px -154px; width:311px; top:50%; left:50%;">
               You have Enrolled. Play game here...
            </h2>
           
        }




    </div>

    <!-- Blog Sidebar Widgets Column -->
    <div class="col-md-4">


        <!-- Blog Categories Well -->
        <div class="well">
            <h4>Payment Methods</h4>
            <div class="row">
                <div class="col-lg-12">
                    <ul class="list-unstyled">
                        @foreach (var paymentMethod in Model.PaymentMethods)
                        {
                            <li>
                                <span>@paymentMethod.PaymentMethod</span><span class="col-lg-offset-1"></span>
                                @if (paymentMethod.IsVerified)
                                {
                                    <span class="label label-success">
                                        Verified
                                    </span>
                                }
                                @if (paymentMethod.IsPrimary)
                                {
                                    <span type="button" class="label label-primary">Primary</span>
                                }

                            </li>
                        }


                    </ul>
                </div>
            </div>
            <!-- /.row -->
        </div>

        <!-- Side Widget Well -->
        <div class="well">
            <h4>Points</h4>
            <p>You have <strong>@Model.Points</strong> points</p>
            <p>Total spent: $ <strong>@Model.TotalSpent</strong> (1.75% processing fee applicable after enrollment)</p>
            <a class="btn btn-primary" href="/Payment/BuyPoint">Buy More Points <span class="glyphicon glyphicon-chevron-right"></span></a>
            <a class="btn btn-primary" href="/Payment/RedeemPoint">Redeem My Points <span class="glyphicon glyphicon-chevron-right"></span></a>
        </div>

    </div>

</div>